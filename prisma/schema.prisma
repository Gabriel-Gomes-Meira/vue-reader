generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Serie {
  id        Int      @id @default(autoincrement())
  title     String
  author    String
  books     Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Word {
  id         Int         @id @default(autoincrement())
  term       String      @unique
  translates Translate[] // Relacionamento com a tabela de traduções
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Translate {
  id        Int      @id @default(autoincrement())
  wordId    Int
  translate String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  word Word @relation(fields: [wordId], references: [id])
}

model Book {
  id        Int      @id @default(autoincrement())
  name      String
  serieId   Int
  serie     Serie    @relation(fields: [serieId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pages Page[]
}

model Page {
  id      Int    @id @default(autoincrement())
  bookId  Int
  title   String
  content String
  index   Int
  book    Book   @relation(fields: [bookId], references: [id], onDelete: Cascade)
}
