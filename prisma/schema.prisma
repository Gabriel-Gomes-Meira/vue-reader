generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Serie {
  id        Int      @id @default(autoincrement())
  titulo    String
  autor     String
  livros    Livro[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Livro {
  id        Int      @id @default(autoincrement())
  nome      String
  conteudo  Bytes // Armazenará o arquivo EPUB como dados binários
  serieId   Int
  serie     Serie    @relation(fields: [serieId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
